<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/action_mindcirrcle_message"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:layout_centerVertical="true">

        <ImageButton
            android:id="@+id/action_mindcircle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:src="@drawable/neardynamic_top"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_mindtitle_view"
        android:layout_width="250.0dip"
        android:layout_height="@dimen/len_40"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mindcircle"
            android:textColor="@color/action_title_color"
            android:textSize="@dimen/font_18"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/action_create_btn"
        android:layout_width="?actionBarSize"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/mind_circle_action_camera"
        android:visibility="visible"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"/>
</RelativeLayout>